<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/scanItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_12sdp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/item_sheet_background"
    android:padding="@dimen/_4sdp">

        <TextView
            android:id="@+id/itemDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18ssp"
            android:text="Item Des"

            android:fontFamily="@font/ubuntu_regular"
            android:textAlignment="center"
            android:textColor="@color/gery"
            />

        <TextView
            android:id="@+id/itemBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:text="Item Barcode"
            android:textAlignment="center"
            android:fontFamily="@font/ubuntu_bold_italic"
            android:textColor="@color/orange1"
            android:layout_marginTop="@dimen/_5sdp"
            />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        >
    <TextView
        android:id="@+id/itemQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20ssp"
        android:text="Qty"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/gery"
        />

        <ImageView
            android:id="@+id/addBtn"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/orange4"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_2sdp"

            android:src="@drawable/add_btn"/>


        <ImageView
            android:id="@+id/subBtn"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/orange2"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_baseline_remove_24"/>


        <ImageView
            android:id="@+id/deleteBtn"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/background_add_btn"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_baseline_delete_24"/>

</LinearLayout>


</LinearLayout>